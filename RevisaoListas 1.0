        if day > 0 and day < 31:
            print(f'A data {day}/{month}/{year} é válida.')
        else:
            print('Data Inválida!')
    elif month == 2:
        if day > 0 and day <= 28:
            print('A data {}/{}/{} é válida.'.format(day, month, year))
        else:
            print('Data Inválida!')
    else:
        print('Data Inválida!')
